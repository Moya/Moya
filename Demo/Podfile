source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

# Our Libraries
def libraries
  pod 'Moya', :path => "../"
  pod 'Moya/ReactiveSwift', :path => "../"
  pod 'Moya/RxSwift', :path => "../"
  pod 'Alamofire'
  pod 'RxSwift', '4.0.0-beta.0'
  pod 'ReactiveSwift'
end

target 'Demo' do
  platform :ios, '8.0'
  libraries
end

target 'DemoMultiTarget' do
  platform :ios, '8.0'
  libraries
end
